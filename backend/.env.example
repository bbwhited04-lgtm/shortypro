# Required for Stripe (set in Render env vars)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PRICE_ID=price_...

# Optional (if omitted, backend will default to frontend URL)
PUBLIC_FRONTEND_URL=https://shortypro.com

# Optional success/cancel URLs (defaults to PUBLIC_FRONTEND_URL + /success and /cancel)
STRIPE_SUCCESS_URL=https://shortypro.com/success
STRIPE_CANCEL_URL=https://shortypro.com/cancel

# Optional admin key for protected endpoints
ADMIN_API_KEY=change_me
